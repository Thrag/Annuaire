<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignBottom="@+id/expandableListView">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></RelativeLayout>
    </ScrollView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMotCle"
        android:hint="Mot Clé"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtAdresse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAdresse"
        android:hint="Adresse"
        android:layout_below="@+id/listCat"
        android:layout_alignLeft="@+id/txtMotCle"
        android:layout_alignStart="@+id/txtMotCle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_alignLeft="@+id/txtMotCle"
        android:layout_alignStart="@+id/txtMotCle"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/buttonSearch"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recherche"
        android:id="@+id/buttonSearch"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/expandableListView"
        android:layout_alignStart="@+id/expandableListView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/buttonCancel"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_alignTop="@+id/buttonSearch"
        android:layout_toRightOf="@+id/buttonSearch"
        android:layout_toEndOf="@+id/buttonSearch" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Catégories"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtMotCle"
        android:layout_alignLeft="@+id/txtMotCle"
        android:layout_alignStart="@+id/txtMotCle"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentStart="true"
        android:height="40dp"
        android:textSize="25dp" />

</RelativeLayout>